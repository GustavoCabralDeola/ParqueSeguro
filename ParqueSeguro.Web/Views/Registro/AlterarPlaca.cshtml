

@model ParqueSeguro.Core.InputModels.MarcarEntradaInputModel

@{
    ViewData["Title"] = "AlterarPlaca";
}

<h1>Alterar Placa do Veículo</h1>

<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="AlterarPlacaVeiculo">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="card">
                <div class="card-header">
                    <div class="card-body row">
                        <div class="col-md">
                            <div class="form-group">
                                <label asp-for="Placa" class="control-label"></label>
                                <input asp-for="Placa" class="form-control" />
                                <span asp-validation-for="Placa" class="text-danger"></span>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="btn-group" role="group">
                <div class="col-md">
                    <div class="form-group" style="margin-top: 1rem">
                        <input type="submit" style="width: 150%" value="Alterar" class="btn btn-success" />
                    </div>

                </div>
                <div class="col-md">
                    <div class="form-group" style="margin-top: 1rem">
                        <a class="btn btn-outline-primary" style="margin-left: 80%; width: 150%" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
