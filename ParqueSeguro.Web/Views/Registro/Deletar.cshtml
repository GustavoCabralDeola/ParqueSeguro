@model ParqueSeguro.Core.InputModels.MarcarEntradaInputModel

@{
    ViewData["Title"] = "DeletarRegistro";
}
<style>

    body {
        font-family: Arial, sans-serif;
        background-color: #0F2027;
        background-image: linear-gradient(315deg, #0F2027 0%, #203A43 74%);
        color: #ffffff;
        line-height: 1.6;
    }
</style>


<h1>Deletar registro do veículo</h1>

<hr />

<h4>Deseja realmente apagar este registro?</h4>
<div class="row">
    <div class="col-md">
        <form asp-action="DeletarRegistro">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Placa" />
            <div class="btn-group" role="group">
                <div class="col-md">
                    <div class="form-group" style="margin-top: 1rem">
                        <input type="submit" style="width: 150%" value="Deletar" class="btn btn-danger" />
                    </div>

                </div>
                <div class="col-md">
                    <div class="form-group" style="margin-top: 1rem">
                        <a class="btn btn-outline-primary" style="margin-left: 80%; width: 150%" asp-action="Index">Voltar</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
