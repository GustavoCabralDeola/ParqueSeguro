@model ParqueSeguro.Core.InputModels.MarcarEntradaInputModel

@{
    ViewData["Title"] = "MarcarSaida";
}

<h1>Marcar Saída de Veículos</h1>

<hr />

<style>

    body {
        font-family: Arial, sans-serif;
        background-color: #0F2027;
        background-image: linear-gradient(315deg, #0F2027 0%, #203A43 74%);
        color: #ffffff;
        line-height: 1.6;
    }
</style>

<div class="row">
    <div class="col-md">
        <form asp-action="MarcarSaidaVeiculoPlaca" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            @* <input type="hidden" asp-for="Placa" /> *@
            <div class="card">
                <div class="card-header">
                    <div class="card-body row">
                        <div class="col-md">
                            <div class="form-group">
                                <label asp-for="Placa" class="control-label" style="color: black"></label>
                                <input asp-for="Placa" class="form-control" />
                                <span asp-validation-for="Placa" class="text-danger"></span>


                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <div class="btn-group" role="group">
                <div class="col-md">
                    <div class="form-group" style="margin-top: 1rem">
                        <input type="submit" style="width: 150%" value="Marcar" class="btn btn-danger" />
                    </div>

                </div>
                <div class="col-md">
                    <div class="form-group" style="margin-top: 1rem">
                        <a class="btn btn-outline-primary" style="margin-left: 80%; width: 150%" asp-action="Index">Voltar</a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
